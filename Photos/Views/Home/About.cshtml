@using Photos.Models;
@{
    ViewBag.Title = "About";
}

<div class="row"> <!-- style=" background:; "> -->
    <p></p>
    <div class="col-md-3">
        <img src="@Session["Avatar"]" alt="avatar" class="img-circle">
    </div>
    <div class="col-md-4" style="margin-top: 7%; margin-left: -5%;">
        <h2>@Session["NickName"]</h2>
        <h3>@Session["Name"] @Session["Surname"]</h3>
    </div>
    <div class="col-md-4" style="margin-top: 10%; margin-left: 5%;">
        <div class=" row" style="border:1px solid #ccc;border-radius:4px;box-shadow:0 1px 1px rgba(0,0,0,.08),inset 0 1px 0 rgba(255,255,255,.8);color:#999;">
            <div class="col-md-4">
                <h4 style="text-align: center;">Posts:</h4>
                <h4 style="text-align: center;">@Session["Posts"]</h4>
            </div>
            <div class="col-md-4">
                <h4 style="text-align: center;">@Session["Follovers"]</h4>
                <h4 style="text-align: center;">@Html.ActionLink("followers", "Followers", "Home")</h4>
            </div>
            <div class="col-md-4">
                <h4 style="text-align: center;">@Html.ActionLink("Followings:", "Followings", "Home")</h4>
                <h4 style="text-align: center;">@Session["Follovings"]</h4>
            </div>
        </div>
    </div>
</div>
<p></p>
@if (Model.Count != 0)
{
    <div class="row img-rounded">
        <div class="col-md-2">
        </div>
        <div class="col-md-8 img-rounded text-center" style=" background:#e0e1e2; ">

            @foreach (var elem in Model)//for (int i = Model.Count - 1; i >= 0; i-- )//foreach (var elem in Model) (Model as List<Post>))
            {
                string p = elem.Photo;
                int l = elem.Likes;
                int c = elem.Comments;
                int idus = elem.idUserPosted;
                <img src="~/images/@elem.Photo" class="img-rounded" alt=" image" height="700" width="700" style="display: block; margin-left: auto; margin-right: auto; margin-bottom: 5px; margin-top: 5px;" />
                <span style="color: #0094ff"> @elem.Text</span>
                <br />
                <div class="row text-center img-rounded">
                    <div class="col-md-3 img-rounded" style=" background:#e0e1e2; ">
                        <span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: #fc2f29"> </span>
                        @Html.ActionLink("Likes ", "Likes", "Home", new { photo = p, likes = l, iduserposted = idus }, null)
                        <span style="color: #0094ff"> @elem.Likes</span>
                    </div>
                    <div class="col-md-6 " style=" background:#e0e1e2; ">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true" style="color: #808080"> </span>
                        @Html.ActionLink("Comments", "Comments", "Home", new { photo = p, comments = c }, null)
                        <span style="color: #0094ff"> @elem.Comments</span>
                    </div>
                    <div class="col-md-3 img-rounded" style=" background:#e0e1e2; ">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true" style="color: #808080"> </span>
                        @Html.ActionLink("Delete", "Delete", "Home", new { photo = @p }, null)
                    </div>
                </div>
            }

        </div>



        <div class="col-md-2">
        </div>
    </div>
}
